<div class="container mb-3">
    <div class="row">
        <div class="col-md-6">
            <h1>Edit data</h1>

            <% if (typeof errors !="undefined" ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(err=> { %>
                            <li>
                                <%= err.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>
                    <form method="post" action="/contact/update">
                        <input type="hidden" name="oldEmail" value="<%= contacts.oldEmail || contacts.email %>">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama" required value="<%= contacts.nama %>">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required value="<%= contacts.email %>">
                        </div>
                        <div class="mb-3">
                            <label for="noHp" class="form-label">Nomor Handphone</label>
                            <input type="text" class="form-control" id="noHp" name="noHp" required value="<%= contacts.noHp %>" >
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
        </div>
    </div>
</div>