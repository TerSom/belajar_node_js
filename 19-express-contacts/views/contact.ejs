<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <a href="contact/add" class="btn btn-primary">Tambah Data</a>
            <h2>Daftar Kontak</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">NO</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <% if (msg.length !==0) { %>
                    <div class="alert alert-success" role="alert">
                        <%= msg %>
                    </div>
                    <% } %>
                        <tbody>
                            <% if (contacts.length===0) { %>
                                <div class="alert alert-danger" role="alert">
                                    Data Contact tidak ada <a href="/" class="card-link">Kembali ke halaman Home</a>
                                </div>
                                <% } else { %>
                                    <% contacts.forEach((contacts, i )=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= i + 1 %>
                                            </th>
                                            <td>
                                                <%= contacts.nama %>
                                            </td>
                                            <td>
                                                <%= contacts.noHp %>
                                            </td>
                                            <td>
                                                <a href="/contact/<%= contacts.email %>"
                                                    class="btn btn-success bagde rounded-pill"> <i
                                                        class="bi bi-info-circle-fill"></i> Aksi</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                        </tbody>
            </table>
        </div>
    </div>
</div>